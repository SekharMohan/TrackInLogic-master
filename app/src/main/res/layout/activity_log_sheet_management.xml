<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LogSheetManagement">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewGeneralInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="General Info:"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_vehicles_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/vehiclesNumberView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Vehicles Number"
                    android:maxLines="1"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_trailers_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/trailersNumbeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Trailers Number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_odeometer_beginning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/odometerBegnningView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="Beginning of odometer"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_odometer_ending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/odometerEndingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
android:layout_weight="0.5"
                        android:hint="Ending of odometer"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/distance_travelled_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Distance travelled"
                android:textColor="#000000"
                android:textSize="16sp">

            </android.support.v7.widget.AppCompatTextView>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_shipping_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/shippingDocumentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Shipping Document Number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dvinsButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/dvins"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/sign"
        android:background="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"/>
</android.support.v7.widget.LinearLayoutCompat>
