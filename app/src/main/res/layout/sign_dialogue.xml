<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <trackinlogic.trans.pss.com.trackinlogic.features.common.widgets.CaptureSignatureView
        android:id="@+id/signatureView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/save"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />


    <CheckBox
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="@string/save_sign"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@+id/signatureView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <CheckBox
        android:id="@+id/saveLoginCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/sign_certify"
        app:layout_constraintRight_toRightOf="@+id/save"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/save"
        app:layout_constraintLeft_toLeftOf="@+id/save" />

</android.support.constraint.ConstraintLayout>