<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="false" android:state_enabled="true" app:state_error="false" app:state_disabled_clickable="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:left="@dimen/input_field_left" android:top="@dimen/input_field_top" android:right="@dimen/input_field_right" android:bottom="@dimen/input_field_bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/light_grey_2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item app:state_disabled_clickable="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:left="@dimen/input_field_left" android:top="@dimen/input_field_top" android:right="@dimen/input_field_right" android:bottom="@dimen/input_field_bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/light_grey_3" android:dashWidth="4.0dip" android:dashGap="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" app:state_error="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:left="@dimen/input_field_left" android:top="@dimen/input_field_top" android:right="@dimen/input_field_right" android:bottom="@dimen/input_field_bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/light_grey_3" android:dashWidth="4.0dip" android:dashGap="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" app:state_error="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:left="@dimen/input_field_left" android:top="@dimen/input_field_top" android:right="@dimen/input_field_right" android:bottom="@dimen/input_field_bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/primary_red" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:left="@dimen/input_field_left" android:top="@dimen/input_field_top" android:right="@dimen/input_field_right" android:bottom="@dimen/input_field_bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/primary_blue" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>